{
  "name": "mro_btp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/cds-odata-v2-adapter-proxy": "^1.8.21",
    "@sap/xssec": "^3.2.13",
    "express": "^4",
    "hdb": "^0.18.3",
    "passport": "^0.6.0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.0",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "jest": "^27.1.0",
    "qunit": "^2.9.3",
    "sqlite3": "^5"
  },
  "engines": {
    "node": "^12.0.0 || ^ 14.0.0"
  },
  "scripts": {
    "lint": "npx eslint .",
    "start": "cds run",
    "test": "jest",
    "test:mocha": "npx mocha --timeout 20000"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana"
      },
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        },
        "auth": {
          "kind": "xsuaa"
        }
      },
      "[development]": {
        "auth": {
          "kind": "dummy-auth",
          "users": {
            "rose": {
              "password": "rose",
              "roles": []
            },
            "amy": {
              "password": "amy",
              "roles": [
                "processor"
              ]
            }
          }
        }
      }
    },
    "log": {
      "service": true
    },
    "features": {
      "preserve_computed": true
    },
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf"
        }
      ]
    }
  },
  "sapux": [
    "app/zmro_ui"
  ]
}
